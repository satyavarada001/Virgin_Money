<?xml version="1.0" encoding="utf-8"?>
        

    
                 
                       
                                                       
           

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:tag="layout/recycler_item_room_0">

        <androidx.cardview.widget.CardView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/ivRoomNumber"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/purple_500"
                    android:textColor="@android:color/white"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="1"
                    android:tag="binding_1"      />

                <TextView
                    android:id="@+id/tvOccupancyStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/ivRoomNumber"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="Occupied"
                    android:tag="binding_2"           />

                <TextView
                    android:id="@+id/tvMaxOccupancy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/ivRoomNumber"
                    android:layout_below="@+id/tvOccupancyStatus"
                    android:textSize="13sp"
                    android:text="53539"
                    android:tag="binding_3"        />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

         