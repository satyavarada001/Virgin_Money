<?xml version="1.0" encoding="utf-8"?>
        

    
                 
                            
                                                                
           

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/fragment_people_details_0">

        <RelativeLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="8dp">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/ic_user_placeholder"
                android:layout_centerHorizontal="true"
                android:tag="binding_1"                    />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/ivAvatar"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:text="Chiranjit Bardhan"
                android:tag="binding_2"                  />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/tvName"
                android:layout_centerHorizontal="true"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:text="bardhan.jit@gmail.com"
                android:tag="binding_3"                   />

            <TextView
                android:id="@+id/tvJobTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/tvEmail"
                android:layout_centerHorizontal="true"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:text="Sr. Software Engineer"
                android:tag="binding_4"                      />

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

         